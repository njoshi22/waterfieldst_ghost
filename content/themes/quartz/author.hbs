{{!< default}}

{{! This is a author page template. It displays posts from a paticular author }}
    
    {{#author}}
    <div class="page-header">
        <div class="wrapper">

            <div class="post-tags">Stories by</div>
            
            <h1 class="author-title">{{name}}</h1>

            <div class="post-meta">
                {{#if location}}<span class="author-location">{{location}}</span> | {{/if}}
                {{#if website}}<a class="author-website" href="{{website}}">{{website}}</a>{{/if}}
            </div>
        </div> <!-- .wrapper -->
    </div> <!-- .page-header -->
    {{/author}}

    <div class="wrapper clearfix">
        <div class="posts clearfix">
            {{#foreach posts}}
            <div class="{{post_class}}">
                <a href="{{url}}">
                    <div class="featured-image {{^if image}}no-featured-image{{/if}}" {{#if image}} style="background-image:url({{image}})" {{/if}}></div> 
                </a>
                <section class="post-info">
                    {{#if tags}}
                        <div class="post-tags">{{tags separator=" | " limit="3"}}</div>
                    {{/if}}
                    <h2 class="post-title">
                        <a href="{{url}}">{{{title}}}</a>
                    </h2>
                    <p class="post-excerpt">{{excerpt words="25"}}...</p>
                    <div class="post-meta">
                        <span class="post-author">By {{author}}</span>
                        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"> - {{date format="MMMM D, YYYY"}}</time>
                    </div>
                </section> 
            </div>
            {{/foreach}}
        </div> <!-- .posts -->
        
        {{> "sidebar" }}
        
    </div> <!-- .wrapper -->
    
    {{!! Pagination links }}
    {{pagination}}
