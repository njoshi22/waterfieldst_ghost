<div class="wrapper">
	{{navigation}}  

	{{#if @blog.navigation}}
		<div class="menu-btn">
			<div class="material-burger">
			    <span></span>
			</div>
		</div>
	{{/if}}

	{{#if @blog.logo}}
		<a href="{{@blog.url}}">
		    <img class="blog-logo" {{#if @blog.navigation}} style="margin-left: 0px;" {{/if}} src="{{@blog.logo}}" alt="{{@blog.title}}" />
		</a>
	{{else}}
		<h2 class="blog-title" {{#if @blog.navigation}} style="margin-left: 0px;" {{/if}}><a href="{{@blog.url}}">{{@blog.title}}</a></h2>
	{{/if}}
</div>
